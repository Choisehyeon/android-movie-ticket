<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seat_activity"
    tools:context=".SeatSelectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/price_constraint"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="@color/screen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="9dp"
                    android:text="@string/screen"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TableLayout
                android:id="@+id/seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout3">

                <TableRow>

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="A1"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="A2"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="A3"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="A4"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="B1"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="B2"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="B3"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="B4"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="C1"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="C2"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="C3"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="C4"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="D1"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="D2"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="D3"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="D4"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="E1"
                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="E2"
                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="E3"
                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="E4"
                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_constraint"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/enterBtn"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:text="@string/ticket_price_seat_page"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/enterBtn"
        android:layout_width="88dp"
        android:layout_height="78dp"
        android:background="@color/not_enter"
        android:gravity="center"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/price_constraint" />



</androidx.constraintlayout.widget.ConstraintLayout>
